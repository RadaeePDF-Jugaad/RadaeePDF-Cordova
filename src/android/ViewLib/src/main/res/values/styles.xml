<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme.NoTitleBar" parent="android:Theme.DeviceDefault.NoActionBar">

    </style>

    <style name="ProgressBar" parent="android:Widget.DeviceDefault.ProgressBar"/>

    <style name="popup_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/anim_popup_start</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_end</item>
    </style>
</resources>
